<Window x:Class="Followlike_bot.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Followlike_bot.App"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
        Title="MainWindow" Height="600" Width="300"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Grid>
        <Button Content="Start" FontSize="48" HorizontalAlignment="Left" Margin="25,0" VerticalAlignment="Top" Width="240" Height="100" IsEnabled="{Binding IsRunning}" Command="{Binding StartBotCommand}" />

    </Grid>
</Window>
